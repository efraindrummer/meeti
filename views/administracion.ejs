<main class="contenedor panel-administracion">
    <h1><%= nombrePagina%></h1>

    <div class="contenedor-botones">
        <a href="/nuevo-grupo" class="btn btn-amarillo">Nuevo Grupo</a>
        <a href="/nuevo-meeti" class="btn btn-azul">Nuevo Meeti</a>
        <a href="/editar-perfil" class="btn btn-rosa">Editar Perfil</a>
        <a href="/imagen-perfil" class="btn btn-amarillo">Image Perfil</a>
    </div>

    <div class="seccion-admin">
        <h2>Tus Eventos</h2>
        <ul>
            <li>
                <div class="informacion-admin">
                    <p class="fecha">Lunes 04 de diciembre 2023</p>
                    <h3>E-Commerce en Mexico</h3>
                    <small>23 asistentes</small>
                </div>

                <div class="acciones contenedor-botones">
                    <a href="#" class="btn btn-verde">Editar</a>
                    <a href="#" class="btn btn-azul2">Asistentes</a>
                    <a href="#" class="btn btn-rojo">Eliminar</a>
                </div>
            </li>
            <li>
                <div class="informacion-admin">
                    <p class="fecha">Miercoles 06 de diciembre 2023</p>
                    <h3>Bitcoin & Etherium Criptomonedas</h3>
                    <small>30 asistentes</small>
                </div>

                <div class="acciones contenedor-botones">
                    <a href="#" class="btn btn-verde">Editar</a>
                    <a href="#" class="btn btn-azul2">Asistentes</a>
                    <a href="#" class="btn btn-rojo">Eliminar</a>
                </div>
            </li>
            <li>
                <div class="informacion-admin">
                    <p class="fecha">Viernes 08 de diciembre 2023</p>
                    <h3>NodeJS</h3>
                    <small>100 asistentes</small>
                </div>

                <div class="acciones contenedor-botones">
                    <a href="#" class="btn btn-verde">Editar</a>
                    <a href="#" class="btn btn-azul2">Asistentes</a>
                    <a href="#" class="btn btn-rojo">Eliminar</a>
                </div>
            </li>
        </ul>
    </div>

    <div class="seccion-admin">

        <h2>Tus grupos</h2>
        <% if(grupos.length) { %>
            <ul>
                <% grupos.forEach(grupo => { %>
                <li>
                    <div class="informacion-admin">
                        <h3><%= grupo.nombre %></h3>
                    </div>
        
                    <div class="acciones contenedor-botones">
                        <a href="/editar-grupo/<%= grupo.id %>" class="btn btn-verde">Editar</a>
                        <a href="/imagen-grupo/<%= grupo.id %>" class="btn btn-azul2">Imagen</a>
                        <a href="/eliminar-grupo/<%= grupo.id %>" class="btn btn-rojo">Eliminar</a>
                    </div>
                </li>
                <% }) %>
            </ul>
        <% } else { %>
            <p>No tienes un grupo creado</p>
        <% } %>
    </div>
</main>